<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--Preference Style-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
    </style>


    <!--This is a style for TextView labels in Details Screen-->
    <style name="detailScreenLayout_textviews_labels">
        <item name="android:layout_marginTop">@dimen/details_screen_textviews_top_margin</item>
        <item name="android:textSize">@dimen/details_screen_textviews_label_textSize</item>
        <item name="android:fontFamily">@font/cormorant</item>
        <!--<item name="android:fontStyle">normal</item>-->

    </style>

    <!--This is a style for TextView values in Details Screen-->
    <style name="detailScreenLayout_textviews_values">
        <item name="android:layout_marginTop">@dimen/details_screen_textviews_top_margin</item>
        <item name="android:textSize">@dimen/details_screen_textviews_values_textSize</item>
        <item name="android:fontFamily">@font/delius</item>

    </style>

</resources>
